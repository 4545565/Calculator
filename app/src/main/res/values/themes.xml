<?xml version="1.0" encoding="utf-8"?><!-- res/values/themes.xml -->
<resources>

    <style name="Base.Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 使用已存在的颜色资源 -->
        <item name="colorPrimary">@color/button_background</item>  <!-- 深灰色 -->
        <item name="colorOnPrimary">@color/text_color</item>       <!-- 白色 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">"@color/background"</item>        <!-- 黑色 -->
    </style>
    <!-- 应用主主题 -->
    <style name="Theme.Calculator" parent="Base.Theme.Calculator">
        <!-- 追加自定义属性 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>